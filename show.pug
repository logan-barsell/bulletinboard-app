extends ../application.pug

block content
  .container
    .card.card-block
      .row
        .col-xs-12.col-md-8
         //- gets title of the message to display
         h2= message.title
         //- gets body of the message to display
         h5= message.body
         //-edit button
        .row
          .col-xs-6.text-xs-left
            form(action="/delete/" + message.id method="POST")
              input(type="hidden" name="_method" value='DELETE')
              button(type="submit" class="btn btn-danger" data-message=message.id) Delete
              .col-xs-6
                a.btn.btn-primary(href="/messages/edit/" + message.id) Edit
